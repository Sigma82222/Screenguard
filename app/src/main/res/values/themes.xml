<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Theme.Parent" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Основные цвета для тёмной темы -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@android:color/black</item>

        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@android:color/darker_gray</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Поверхности и фон -->
        <item name="colorBackgroundFloating">@android:color/black</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>
</resources>
